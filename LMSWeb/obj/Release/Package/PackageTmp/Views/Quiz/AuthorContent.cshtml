@model LMSBL.DBModels.TblQuiz
@{
    ViewBag.Title = "Author Content";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}


@using (Html.BeginForm("AddQuiz", "Quiz", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid mt-4 mb-4 pl-4 pr-4">
        <div class="row justify-content-center h-100">
            <div class="col align-self-center add-user-section add-new-quiz">
                <ul class="steps">
                    <li class="step step-active">
                        <div class="step-content">
                            <span class="step-circle">1</span>
                            <span class="step-text">Create</span>
                        </div>
                    </li>
                    <li class="step">
                        <div class="step-content">
                            <span class="step-circle">2</span>
                            <span class="step-text">Preview</span>
                        </div>
                    </li>
                    <li class="step">
                        <div class="step-content">
                            <span class="step-circle">3</span>
                            <span class="step-text">Assign</span>
                        </div>
                    </li>

                </ul>

            </div>
            <div class="container-fluid mt-4 mb-4 pl-4 pr-4">

                <div class="row justify-content-center h-100">
                    <div class="col align-self-center add-user-section add-new-quiz">

                        <div class="row pt-5 pl-4">
                            <div class="col-sm-6">
                                @Html.HiddenFor(model => model.hdnData, new { @id = "hdnData" })
                                @Html.HiddenFor(model => model.QuizId)

                                @Html.TextBoxFor(model => model.QuizName, new { @class = "input200 d-block", placeholder = "Survey Name" })
                                @Html.TextAreaFor(model => model.QuizDescription, new { @class = "input200 d-block", placeholder = "Survey Intro" })


                            </div>
                            <div class="col-sm-6">

                                Add Logo :  <input type="file" name="file" id="file" accept="image/*" style="width: 70%;" />


                            </div>
                            <div class="mb-2 mt-2 w-100" id="dvQuestions"></div>
                        </div>
                        @*<div class="row justify-content-end pr-4">
                                <button type="button" id="btnAddQuestion" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Add Question</button>
                                <button type="submit" name="submit" id="btnQuizSubmit" value="Save" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save Changes</button>
                                <button type="submit" name="submit" id="btnQuizSubmitExit" value="Exit" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save & Exit</button>
                                <button type="submit" onclick="location.href='@Url.Action("Index", "Quiz")';return false;" class="btn btn-outline-primary cancel-btn"><i class="far fa-times-circle"></i> Cancel</button>
                            </div>*@
                    </div>
                </div>
            </div>
            <div class="container-fluid mt-4 mb-4 pl-4 pr-4">
                <div class="row  h-100">
                    <div class="col quiz-left-pane">
                        <div id="questionList">
                            
                        </div>
                        <br /><br /><br />

                        <button type="button" id="btnAddQuestion" class="btn btn-primary profle-submit-btn mr-2"><img src="~/assets/images/check-img.png" /> Add Question</button>
                    </div>
                    <div class="col quiz-right-pane">
                        <div id="questionDetails"></div>
                        <button type="button" style="display:none;" id="btnSaveQuestion" class="btn btn-primary profle-submit-btn mr-2"><img src="~/assets/images/check-img.png" /> Save Question</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
