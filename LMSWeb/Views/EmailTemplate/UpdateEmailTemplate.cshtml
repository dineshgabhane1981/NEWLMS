@model LMSBL.DBModels.tblTemplateAssign
@{
    ViewBag.Title = "UpdateEmailTemplate";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<h2>Update EmailTemplate</h2>
@using (Html.BeginForm("UpdateTemplate", "EmailTemplate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Message"])))
    {
        <script>
            swal.fire("Template Updated Successfully")
                .then((value) => {
                    window.location.href = "Index";
                });
        </script>

    }

    <div class="row justify-content-center h-100">
        <div class="col align-self-center add-user-section add-new-quiz">


            <div class="row pt-5 pl-4">
                <div class="col-sm-6">

                    @Html.HiddenFor(Model => Model.TemplateId)
                    @Html.LabelFor(Model => Model.EmailSubject, new { @class = "col-3 p-0" })
                    @Html.TextBoxFor(Model => Model.EmailSubject, new { @class = "input200 d-block", placeholder = "Email Subject" })
                    @Html.LabelFor(Model => Model.EmailBody)
                    @Html.TextAreaFor(Model => Model.EmailBody, new { id = "editarea" })
                </div>
                <div class="col-sm-6">
                    <div></div>
                    <!--<button type="button" id="btnAddQuestion" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Add Question</button>-->

                </div>
                <div class="mb-2 mt-2 w-100" id="dvQuestions"></div>

                <div class="row justify-content-end pr-4">
                    <button type="submit" name="submit" id="btnUpdate" value="save" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Update</button>
                    @* <button type="button" onclick="location.href='@Url.Action("UpdateTemplate", "EmailTemplate")';return false;" class="btn btn-outline-primary cancel-btn"><i class="far fa-times-circle"></i> Cancel</button>*@

                </div>
                @*<button type="submit" name="submit" id="btnQuizSubmit" value="Save" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save Changes</button>
                    <button type="submit" name="submit" id="btnQuizSubmitExit" value="Exit" class="btn btn-primary profle-submit-btn mr-4"><img src="~/assets/images/check-img.png" /> Save & Exit</button>
                    <button type="submit" onclick="location.href='@Url.Action("Index", "Quiz")';return false;" class="btn btn-outline-primary cancel-btn"><i class="far fa-times-circle"></i> Cancel</button>*@
            </div>
        </div>
    </div>
</div>
}


<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>

<script src="~/assets/Quiz.js"></script>

<script >
    $(document).ready(function () {
        $('#editarea').summernote();
    });
      
</script>